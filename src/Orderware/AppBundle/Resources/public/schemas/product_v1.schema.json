{
    "id": "https://orderware.io/bundles/orderwareapp/schemas/product_v1.request.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "division": {
            "type": "string"
        },
        "vendors": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "properties": {
                    "vendor_num": {
                        "type": "string"
                    },
                    "display_name": {
                        "type": "string"
                    },
                    "primary_contact": {
                        "type": "string"
                    },
                    "address1": {
                        "type": ["string", "null"]
                    },
                    "address2": {
                        "type": ["string", "null"]
                    },
                    "city_name": {
                        "type": ["string", "null"]
                    },
                    "postal_code": {
                        "type": ["string", "null"]
                    },
                    "state_code": {
                        "type": ["string", "null"]
                    },
                    "state_name": {
                        "type": ["string", "null"]
                    },
                    "country_code": {
                        "type": ["string", "null"]
                    },
                    "country_name": {
                        "type": ["string", "null"]
                    },
                    "email_address": {
                        "type": ["string", "null"],
                        "format": "email"
                    },
                    "phone_number": {
                        "type": ["string", "null"]
                    },
                    "fax_number": {
                        "type": ["string", "null"]
                    }
                },
                "additionalProperties": false,
                "required": [
                    "vendor_num",
                    "display_name",
                    "primary_contact",
                    "address1",
                    "address2",
                    "postal_code",
                    "city_name",
                    "state_code",
                    "state_name",
                    "country_code",
                    "country_name",
                    "email_address",
                    "phone_number",
                    "fax_number"
                ]
            }
        },
        "items": {
            "type": "array",
            "minItems": 0,
            "items": {
                "properties": {
                    "status": {
                        "type": "string"
                    },
                    "item_num": {
                        "type": "string"
                    },
                    "display_name": {
                        "type": "string"
                    },
                    "weight": {
                        "type": ["string", "number"]
                    },
                    "length": {
                        "type": ["string", "number"]
                    },
                    "width": {
                        "type": ["string", "number"]
                    },
                    "depth": {
                        "type": ["string", "number"]
                    },
                    "ship_alone": {
                        "type": "boolean"
                    },
                    "taxable": {
                        "type": "boolean"
                    },
                    "virtual": {
                        "type": "boolean"
                    },
                    "track_inventory": {
                        "type": "boolean"
                    },
                    "skus": {
                        "type": "array",
                        "minItems": 0,
                        "items": {
                            "properties": {
                                "status": {
                                    "type": "string"
                                },
                                "skucode": {
                                    "type": "string"
                                },
                                "barcode": {
                                    "type": "string"
                                },
                                "cost_price": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "retail_price": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "pick_description": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false,
                            "required": [
                                "status",
                                "skucode",
                                "barcode",
                                "cost_price",
                                "retail_price",
                                "pick_description"
                            ]
                        }
                    }
                },
                "additionalProperties": false,
                "required": [
                    "status",
                    "item_num",
                    "display_name",
                    "weight",
                    "length",
                    "width",
                    "depth",
                    "ship_alone",
                    "taxable",
                    "virtual",
                    "track_inventory",
                    "skus"
                ]
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "division",
        "vendors",
        "items"
    ]
}
